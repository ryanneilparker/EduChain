@page
@model EduChain.Pages.CreateCertificateModel
@{
    ViewData["Title"] = "Create";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2">Create Certificate</h2>
                            <p class="text-white-50 mb-5">Please enter the certificate details</p>
                            <form action="/CreateCertificate" method="POST">
                                <div class="form-outline form-white mb-4">
                                    <input type="text" class="form-control form-control-lg" placeholder="Student Name"/>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input type="text" class="form-control form-control-lg" placeholder="Certificate Name"/>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input type="text" class="form-control form-control-lg" placeholder="Message"/>
                                </div>
                                <input class="btn btn-outline-light btn-lg px-5" type="submit" value="Create">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
